<!-- Button trigger modal -->
<a href="#exampleModal">
  <img
    src="img/edit.svg"
    alt="lixo"
    width="20"
    height="20"
    data-bs-toggle="modal"
    data-bs-target="#exampleModal-<%= aluno._id %>"
  />
</a>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal-<%= aluno._id %>"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <h3>Altere os dados necessários</h3>
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/aluno/edit/<%= aluno._id %>" method="POST">
        <div class="modal-body">
          <div class="form-floating mb-3">
            <input
              class="form-control"
              type="text"
              id="nome"
              value="<%= aluno.nome %>"
              name="nome"
            />
            <label for="nome">Altere o Nome:</label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="number"
              class="form-control"
              value="<%= aluno.matricula %>"
              name="matricula"
              id="matricula"
            />
            <label for="matricula">Altere o número de matrícula:</label>
          </div>
          <div>
            <label for="dataDeNascimento">Altere a data de Nascimento:</label>
            <input
              class="form-control"
              type="date"
              value="<%= aluno.dataDeNascimento %>"
              id="dataDeNascimento"
              name="dataDeNascimento"
            />
          </div>
          <br />
          <div class="form-floating mb-3">
            <input
              class="form-control"
              type="text"
              value="<%= aluno.curso %>"
              id="curso"
              name="curso"
            />
            <label for="curso">Altere o nome do curso:</label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="number"
              step="0.1"
              class="form-control"
              value="<%= aluno.semestreDeIngresso %>"
              name="semestreDeIngresso"
              id="semestreDeIngresso"
            />
            <label for="semestreDeIngresso"
              >Altere o semestre de ingresso:</label
            >
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Salvar Mudanças</button>
        </div>
      </form>
    </div>
  </div>
</div>
