<!-- Button trigger modal -->
    <button type="button"  data-bs-toggle="modal" data-bs-target="#exampleModal-<%= aluno._id %>">
        <img src="img/edit.svg" alt="editar" width="20" height="20" />
    </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal-<%= aluno._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><h3>Altere os dados necessários</h3></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/aluno/edit/<%= aluno._id %>" method="POST">
        <div class="modal-body">
            <div class="form-floating mb-3">
                <input class="form-control" type="text" id="nome" value="<%= aluno.nome %>" name="nome">
                <label for="nome">Altere o Nome:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" value="<%= aluno.matricula %>" name="matricula" id="matricula">
                <label for="matricula">Altere o número de matrícula:</label>
            </div>
            <div>
                <label for="dataDeNascimento">Altere a data de Nascimento:</label>
                <input class="form-control" type="date"  value="<%= aluno.dataDeNascimento %>" id="dataDeNascimento" name="dataDeNascimento">
            </div>
            <br>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" value="<%= aluno.curso %>" id="curso" name="curso">
                <label for="curso">Altere o nome do curso:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" step="0.1" class="form-control" value="<%= aluno.semestreDeIngresso %>" name="semestreDeIngresso" id="semestreDeIngresso">
                <label for="semestreDeIngresso">Altere o semestre de ingresso:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number"  class="form-control" value="<%= aluno.CPF %>" name="CPF" id="CPF">
                <label for="CPF">Altere o CPF:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" value="<%= aluno.RG %>" name="RG" id="RG">
                <label for="RG">Altere o RG:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" value="<%= aluno.tituloEleitor %>" name="tituloEleitor" id="tituloEleitor">
                <label for="tituloEleitor">Altere o Título de Eleitor:</label>
            </div>
            <div class="form-floating mb-3">
                <select class="form-select" id="estadoCivil" name="estadoCivil">
                    <option selected><%= aluno.estadoCivil %></option>
                    <option value="Solteiro">Solteiro</option>
                    <option value="Casado">Casado</option>
                    <option value="Divorciado">Divorciado</option>
                    <option value="Viúvo">Viúvo</option>
                </select>
                <label for="estadoCivil">Altere o Estado Civil:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" value="<%= aluno.UF %>" name="UF" id="UF">
                <label for="UF">Altere a UF:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" value="<%= aluno.cidade %>" name="cidade" id="cidade">
                <label for="cidade">Altere a cidade:</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" step="0.1" class="form-control" value="<%= aluno.endereco %>" name="endereco" id="endereco">
                <label for="endereco">Altere o endereco:</label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Salvar Mudanças</button>
        </div>
        </form>
    </div>
    </div>
  </div>